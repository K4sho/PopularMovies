<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="360dp"
        android:layout_height="290dp"
        android:src="@drawable/banner_jason"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/poster_frame"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="646dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/movie_info_frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/rectangle_1"
            android:layout_width="58dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangle_1"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@id/rectangle_1"
            android:layout_marginLeft="9dp"
            app:layout_constraintTop_toTopOf="@id/rectangle_1"
            android:layout_marginTop="3dp"
            android:text="@string/genre"
            android:textAppearance="@style/genre"
            android:lineSpacingExtra="0sp"
            android:gravity="top"/>

        <TextView
            android:id="@+id/date_movie_tv"
            android:layout_width="61dp"
            android:layout_height="12dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="207dp"
            app:layout_constraintStart_toEndOf="@id/rectangle_1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/date_movie"
            android:textAppearance="@style/date_movie"
            android:lineSpacingExtra="0sp"
            android:gravity="top">
        </TextView>

        <ImageView
            android:id="@+id/age_limit_ellipse"
            android:layout_width="41.4dp"
            android:layout_height="42.2dp"
            android:background="@drawable/ellipse"
            android:layout_marginTop="41.4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="298.3dp"
            android:layout_marginEnd="20.3dp"
            app:layout_constraintStart_toStartOf="parent">
        </ImageView>


        <TextView
            android:id="@+id/age_limit_tv"
            android:layout_width="27.6dp"
            android:layout_height="18.4dp"
            app:layout_constraintTop_toTopOf="@id/age_limit_ellipse"
            app:layout_constraintStart_toStartOf="@id/age_limit_ellipse"
            android:gravity="top"
            android:layout_marginTop="15.31dp"
            android:layout_marginStart="12.31dp"
            android:layout_marginEnd="9.89dp"
            android:textAppearance="@style/age_limit"
            android:lineSpacingExtra="0sp"
            android:translationY="-0.15sp"
            android:text="@string/age_limit"/>

        <TextView
            android:id="@+id/some_id"
            android:layout_width="182dp"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21.58dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="63dp"
            android:text="@string/movie_name"
            android:textAppearance="@style/movie_name"
            android:lineSpacingExtra="0sp"
            android:gravity="top"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>