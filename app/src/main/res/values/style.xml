<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="artist_rounded_iv" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="cover_rounded_iv" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="age_limit">
        <item name="android:textSize">13.8sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="date_movie">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="genre">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="movie_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="movie_description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="actors_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="horizontal_movie_banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="shapeAppearanceOverlay">@style/cover_rounded_iv</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/info_background</item>
    </style>

    <style name="artist_image">
        <item name="android:layout_width">@dimen/artist_image_width</item>
        <item name="android:layout_height">@dimen/artist_image_height</item>
        <item name="android:layout_marginTop">@dimen/artist_image_margin_top</item>
        <item name="android:layout_marginStart">@dimen/artist_image_margin_start</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/artist_rounded_iv</item>
    </style>

    <style name="first_artist_image">
        <item name="android:layout_width">@dimen/artist_image_width</item>
        <item name="android:layout_height">@dimen/artist_image_height</item>
        <item name="android:layout_marginTop">@dimen/artist_image_margin_top</item>
        <item name="android:layout_marginStart">@dimen/first_artist_image_margin_start</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/artist_rounded_iv</item>
    </style>

</resources>