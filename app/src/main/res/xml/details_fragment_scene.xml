<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="easeInOut"
        motion:layoutDuringTransition="honorRequest">
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/iv_banner"
            motion:layout_constraintTop_toTopOf="@id/movie_details_guideline"
            android:id="@+id/movie_details_panel_top"
            android:layout_marginTop="@dimen/motion_constraint_start_margin_top" />
        <Constraint
            android:id="@+id/scroll_view_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@id/movie_details_panel_top"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/motion_constraint_start_scroll_margin_top"
            android:alpha="0.1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" />
</MotionScene>